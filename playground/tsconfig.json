{
  "extends": "./../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": ["*.ts", "**/*.ts", "*.tsx", "**/*.tsx"]
}
