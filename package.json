{
  "name": "@kyma-project/dc",
  "description": "Reusable React component compatible with markdown and most know specifications",
  "version": "0.2.0-alpha.1",
  "license": "Apache-2.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/kyma-incubator/documentation-component"
  },
  "author": {
    "name": "Kyma Core & Supporting Team",
    "url": "http://kyma-project.io"
  },
  "keywords": [
    "kyma",
    "kyma-project",
    "documentation",
    "docs",
    "react",
    "component",
    "web-component",
    "open-api",
    "openapi",
    "async-api",
    "asyncapi",
    "odata",
    "markdown",
    "specification"
  ],
  "scripts": {
    "preinstall": "node -e \"if (process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('Use yarn for installing: https://yarnpkg.com/en/docs/install')\"",
    "bootstrap": "yarn install && gulp install:packages && yarn build:dev",
    "install:packages": "gulp install:packages",
    "lint-check": "tslint -c ./tslint.json --project tsconfig.base.json --format verbose && prettier --config ./.prettierrc --ignore-path ./.prettierignore --check '**/*.{ts,tsx,js,jsx,json,html,css,yaml}'",
    "lint-fix": "tslint -c ./tslint.json --project tsconfig.base.json --format verbose --fix && prettier --config ./.prettierrc --ignore-path ./.prettierignore --write '**/*.{ts,tsx,js,jsx,json,html,css,yaml}'",
    "test": "jest --detectOpenHandles",
    "testWatch": "jest --detectOpenHandles --watch",
    "conflict-check": "tslint-config-prettier-check ./tslint.json",
    "markdownlint": "markdownlint **/*.md",
    "lint-staged": "lint-staged",
    "watch": "gulp watch",
    "clean": "gulp clean:bundle",
    "build": "npm run clean && gulp build && cd ./packages/documentation-component && yarn build",
    "build:dev": "gulp build --dist node_modules/@kyma-project",
    "prerelease": "gulp copy-misc && gulp build --dist node_modules/@kyma-project",
    "publish:latest": "npm run prerelease && npm run build && lerna publish --dist-tag=latest -m \"Publish %s release\"",
    "publish:rc": "npm run prerelease && npm run build && lerna publish --dist-tag=rc -m \"Publish %s release\"",
    "publish:next": "npm run prerelease && npm run build && lerna publish --dist-tag=next --skip-git -m \"Publish %s release\"",
    "publish:beta": "npm run prerelease && npm run build && lerna publish --dist-tag=beta -m \"Publish %s release\"",
    "publish:test": "npm run prerelease && npm run build && lerna publish --force-publish --dist-tag=test --skip-git -m \"Publish %s release\""
  },
  "dependencies": {
    "@kyma-project/dc-async-api-render-engine": "./packages/async-api-render-engine",
    "@kyma-project/dc-markdown-render-engine": "./packages/markdown-render-engine",
    "@kyma-project/dc-odata-render-engine": "./packages/odata-render-engine",
    "@kyma-project/dc-open-api-render-engine": "./packages/open-api-render-engine",
    "@kyma-project/documentation-component": "./packages/documentation-component",
    "@kyma-project/odata-react": "./packages/odata-react"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-async-generator-functions": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.23",
    "babel-plugin-styled-components": "^1.10.6",
    "cli-color": "^1.4.0",
    "delete-empty": "^3.0.0",
    "fancy-log": "^1.3.3",
    "fs-extra": "^8.1.0",
    "gulp": "^4.0.1",
    "gulp-clang-format": "^1.0.27",
    "gulp-clean": "^0.4.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^5.0.1",
    "gulp-watch": "^5.0.1",
    "husky": "^2.4.1",
    "jest": "^24.8.0",
    "jest-environment-jsdom-fourteen": "^0.1.0",
    "jest-watch-typeahead": "^0.3.1",
    "lerna": "^3.15.0",
    "lint-staged": "^8.2.1",
    "markdownlint-cli": "^0.17.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "rollup": "^1.17.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript2": "^0.22.0",
    "rollup-plugin-visualizer": "2.5.0",
    "ts-jest": "^24.0.2",
    "tslib": "^1.10.0",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "tslint-react-hooks": "^2.1.1",
    "typescript": "^3.5.3"
  },
  "engines": {
    "node": ">= 8.9.0"
  },
  "lint-staged": {
    "linters": {
      "**/*.{js,jsx,json,css,html,yaml}": [
        "prettier --config ./.prettierrc --ignore-path ./.prettierignore --write '**/*.{js,jsx,json,html,css,yaml}'",
        "git add"
      ],
      "**/*.{ts,tsx}": [
        "tslint -c ./tslint.json --project tsconfig.base.json --format verbose --fix",
        "prettier --config ./.prettierrc --ignore-path ./.prettierignore --write '**/*.{ts,tsx}'",
        "git add"
      ]
    },
    "ignore": [
      "package.json",
      "package-lock.json"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
