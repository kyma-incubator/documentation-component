{
  "name": "@kyma-project/odata-react",
  "description": "React component for visualization OData specification",
  "version": "0.1.2",
  "license": "Apache-2.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/kyma-incubator/documentation-component/blob/master/packages/odata-react"
  },
  "author": {
    "name": "Kyma Core & Supporting Team",
    "url": "http://kyma-project.io"
  },
  "keywords": [
    "odata",
    "specification"
  ],
  "dependencies": {
    "fiori-fundamentals": "^1.4.3",
    "fundamental-react": "0.4.0",
    "react-xml-parser": "^1.1.2",
    "xslt": "^0.9.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/node": "^10.12.24",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.8.2",
    "@types/styled-components": "^4.1.10",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-scripts": "^2.1.4",
    "styled-components": "^3.4.10",
    "tslib": "^1.10.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "styled-components": ">= 3.4.10"
  },
  "main": "lib/ODataReact.js",
  "types": "lib/ODataReact.d.ts",
  "files": [
    "./lib/",
    "./README.md",
    "./LICENSE"
  ],
  "scripts": {
    "start": "react-scripts start",
    "build": "tsc",
    "test": "react-scripts test; exit 0",
    "lint-check": "tslint -c ../../tslint.json --project tsconfig.json --format verbose && prettier --config ../../.prettierrc --check 'src/**/*.{ts,tsx,js,jsx,json,html,css,yaml}'",
    "lint-fix": "tslint -c ../../tslint.json --project tsconfig.json --format verbose --fix; prettier --config ../../.prettierrc --write 'src/**/*.{ts,tsx,js,jsx,json,html,css,yaml}'",
    "conflict-check": "tslint-config-prettier-check ../../tslint.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{js,jsx,json,css,html,yaml}": [
        "prettier --config ../../.prettierrc --write",
        "git add"
      ],
      "**/*.{ts,tsx}": [
        "tslint -c tslint.json --project tsconfig.json --format verbose --fix",
        "prettier --config ../../.prettierrc --write"
      ]
    },
    "ignore": [
      "package.json",
      "package-lock.json"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
