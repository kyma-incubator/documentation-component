{
  "name": "@kyma-project/odata-react",
  "description": "React component for visualization OData specification",
  "version": "0.0.1-alpha.0",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kyma-incubator/documentation-component/blob/master/packages/odata-react"
  },
  "author": {
    "name": "Kyma Core & Supporting Team",
    "url": "http://kyma-project.io"
  },
  "keywords": [
    "odata",
    "specification"
  ],
  "dependencies": {
    "constate": "^1.2.0",
    "fiori-fundamentals": "^1.4.3",
    "fundamental-react": "0.4.0",
    "xml-js": "^1.6.11",
    "xslt": "^0.9.1"
  },
  "devDependencies": {
    "@types/node": "12.6.2",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.8.2",
    "@types/styled-components": "^4.1.10",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-scripts": "3.0.1",
    "rollup": "^1.16.7",
    "styled-components": "^4.3.2",
    "tslib": "^1.10.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "styled-components": ">= 4.2.0"
  },
  "main": "lib/ODataReact.umd.js",
  "module": "lib/ODataReact.esm.js",
  "browser": "lib/ODataReact.umd.js",
  "types": "lib/ODataReact.d.ts",
  "files": [
    "/lib",
    "./README.md",
    "./LICENSE"
  ],
  "scripts": {
    "start": "SKIP_PREFLIGHT_CHECK=true react-scripts start",
    "build": "rollup -c --compact",
    "test": "echo \"Run tests from root\"",
    "lint-check": "tslint -c ../../tslint.json --project tsconfig.prod.json --format verbose && prettier --config ../../.prettierrc --ignore-path ../../.prettierignore  --check 'src/**/*.{ts,tsx,js,jsx,json,html,css,yaml}'",
    "lint-fix": "tslint -c ../../tslint.json --project tsconfig.prod.json --format verbose --fix; prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --write 'src/**/*.{ts,tsx,js,jsx,json,html,css,yaml}'",
    "conflict-check": "tslint-config-prettier-check ../../tslint.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{js,jsx,json,css,html,yaml}": [
        "prettier --config ../../.prettierrc --write",
        "git add"
      ],
      "**/*.{ts,tsx}": [
        "tslint -c ../../tslint.json --project tsconfig.prod.json --format verbose --fix",
        "prettier --config ../../.prettierrc --ignore-path ../../.prettierignore --write"
      ]
    },
    "ignore": [
      "package.json",
      "package-lock.json"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
